
install.packages("reshape2")
library(reshape2)
data(airquality)
summary_stats <- summary(airquality)
print(summary_stats)
melted_data <- melt(airquality)
print(melted_data)
melted_data_specific_id <- melt(airquality, id.vars = c("Month", "Day"))
print(melted_data_specific_id)
casted_data <- dcast(melted_data_specific_id, Month + Day ~ variable)
print(casted_data)
average_by_month <- dcast(melted_data, Month ~ variable, fun.aggregate = mean)
print(average_by_month)

