data(iris)
cat("Dimension of the dataset:", dim(iris), "\n")
str(iris)
summary_stats <- summary(iris)
print(summary_stats)
std_dev <- apply(iris[, 1:4], 2, sd)
cat("Standard Deviation of features:\n")
print(std_dev)
grouped_means <- aggregate(. ~ Species, data = iris, mean)
grouped_std_dev <- aggregate(. ~ Species, data = iris, sd)
cat("\nMean of features grouped by Species:\n")
print(grouped_means)
cat("\nStandard Deviation of features grouped by Species:\n")
print(grouped_std_dev)
quantile_sepal_width <- quantile(iris$Sepal.Width)
quantile_sepal_length <- quantile(iris$Sepal.Length)
cat("\nQuantile values of Sepal Width:\n")
print(quantile_sepal_width)
cat("\nQuantile values of Sepal Length:\n")
print(quantile_sepal_length)
iris1 <- iris
iris1$Sepal.Length.Cate <- cut(iris$Sepal.Length, breaks = quantile_sepal_length, labels = FALSE)
cat("\nNew data frame 'iris1' with Sepal.Length.Cate:\n")
print(head(iris1))
avg_values <- aggregate(. ~ Species + Sepal.Length.Cate, data = iris1, mean)
cat("\nAverage values by Species and Sepal.Length.Cate:\n")
print(avg_values)
avg_mean_values <- aggregate(. ~ Species + Sepal.Length.Cate, data = iris1, mean)
cat("\nAverage mean values by Species and Sepal.Length.Cate:\n")
print(avg_mean_values)
pivot_table <- xtabs(~ Species + Sepal.Length.Cate, data = iris1)
cat("\nPivot Table based on Species and Sepal.Length.Cate:\n")
print(pivot_table)
